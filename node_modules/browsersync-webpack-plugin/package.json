{
	"name": "browsersync-webpack-plugin",
	"version": "0.6.0",
	"description": "Combines BrowserSync, webpack-dev-middleware, and webpack-hot-middleware into one ezpz plugin.",
	"main": "index.js",
	"repository": "https://github.com/qwp6t/browsersync-webpack-plugin.git",
	"author": "QWp6t",
	"license": "OSL-3.0",
	"xo": {
		"env": { "node": true, "es6": true },
		"parserOptions": {
			"ecmaVersion": 2017,
			"sourceType": "module"
		},
		"rules": {
			"unicorn/filename-case": 0,
			"object-curly-spacing": [2, "always"],
			"brace-style": [2, "1tbs", { "allowSingleLine": true }],
			"capitalized-comments": [0, "never"]
		}
	},
	"babel": {
		"presets": [
			["env", { "targets": { "node": 4.3 } }]
		],
		"comments": false
	},
	"jest": {
		"coverageDirectory": "coverage"
	},
	"dependencies": {
		"webpack-merge": "^4.1.0"
	},
	"peerDependencies": {
		"browser-sync": "^2.18.8"
	},
	"optionalDependencies": {
		"bs-html-injector": "^3.0.3",
		"webpack-dev-middleware": "^1.10.1",
		"webpack-hot-middleware": "^2.17.1"
	},
	"devDependencies": {
		"babel-core": "^6.24.0",
		"babel-jest": "^19.0.0",
		"babel-preset-env": "^1.2.2",
		"browser-sync": "^2.18.8",
		"bs-html-injector": "^3.0.3",
		"glob": "^7.1.1",
		"jest": "^19.0.2",
		"module-concat": "^2.1.4",
		"webpack": "^2.3.2",
		"webpack-dev-middleware": "^1.10.1",
		"webpack-hot-middleware": "^2.17.1",
		"xo": "^0.18.1"
	},
	"scripts": {
		"prebuild": "npm run lint && npm test",
		"build": "node build/build.js",
		"lint": "xo src/* test/* build/*",
		"test": "jest",
		"coverage": "jest --coverage",
		"start": "jest --watch --notify",
		"prepublish": "npm build"
	}
}

